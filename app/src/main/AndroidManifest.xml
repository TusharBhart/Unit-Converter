        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/Theme.UnitConverter">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LengthActivity"/>
        <activity android:name=".WeigthActivity"/>
        <activity android:name=".TImeActivity"/>
        <activity android:name=".TempertaureActivity"/>
        <activity android:name=".VolumeActivity"/>
        <activity android:name=".SpeedActivity"/>
    </application>

</manifest>